{
  "name": "wowex",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "watch": "node_modules/.bin/tstl --watch",
    "lint": "eslint --max-warnings 0 --fix -c .eslintrc.js --cache --ext .js,.jsx,.ts,.tsx ."
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "@wartoshika/wow-declarations": "github:wartoshika/wow-declarations.git#751de2529bef54810ee6ea747129f739aee80ce8",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-react": "^7.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.19.1",
    "type-fest": "^0.8.1",
    "typescript": "^3.6.2",
    "typescript-to-lua": "github:chrisd08/TypeScriptToLua#wow-temp-mod"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc -p tsconfig.json --noEmit && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn run --silent lint -- --ignore-pattern '!.eslintrc.js'",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}

{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "jsx": "react",
    "jsxFactory": "Didact.createElement",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "build",
    "typeRoots": ["@types", "node_modules/@wartoshika"]
  },
  "tstl": {
    "luaTarget": "JIT",
    "luaLibImport": "require",
    "noHeader": true
  }
}
